<table class="formTbl contents">
  <tr>
    <th width="15%">Email</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th>Display name</th>
    <td><%= @user.display_name %></td>
  </tr>
  <tr>
    <th>CardID</th>
    <td><%= @user.cardID %></td>
  </tr>
  <tr>
    <th>Role</th>
    <td><%= @user.roles.map { |role| role.name }.join(",") %></td>
  </tr>
  <tr>
    <th>Is Sub</th>
    <td><%= @user.issub ? "Yes" : "No" %></td>
  </tr>
</table>
<div class="form-actions">
  <%= link_to "Index", url_for(action: :index), class: "btn" %>
  <%= link_to "Destroy", url_for(action: :destroy), confirm: "Are you sure?", method: :delete, class: "btn btn-danger" %>
  <%= link_to "Edit", url_for(action: :edit), class: "btn btn-primary" %>
</div>